<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_view_loans"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayoutVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#FFE6CC"
            app:cardCornerRadius="3dp"
            app:cardElevation="27dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false">

            <TextView
                android:id="@+id/viewLoanId_viewLoans"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginVertical="3dp"
                android:layout_marginStart="30dp"
                android:textAlignment="center"
                android:textColor="#43739D"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewNombreCliente_viewLoans"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="3dp"
                android:textAlignment="textStart"
                android:textColor="#43739D"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/viewDirectionCliente_viewLoans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="34dp"
                android:textAlignment="textStart"
                android:textColor="#696969"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
